<%= stylesheet_link_tag 'user_show', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container d-flex justify-content-center flex-column">
  <div class="w-25 text-light text-center bg-info mt-3">
    <%= flash[:notice] %>
  </div>
  <div class="row">
    <div class="col text-center mt-2 mb-4">
  <h1 class="text-center"><strong><%= @user.first_name %>さんのユーザープロフィール</strong></h1>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-6 mx-auto mt-2 mb-5 border text-center">
      会員ステータス：
        <% if @user.is_active == true %>
          <p class="text-center" style="color:black; background-color:#CCFF99;"><strong>有効</strong></p>
        <% else %>
          <p class="text-center" style="color:black; background-color:#FFABCE;">退会済み</p>
        <% end %>
    </div>
  </div>
<!--ユーザー情報は部分テンプレートにする-->
<%= render 'layouts/user_show', user: @user, trips: @trips %>


<div class="container mb-4">
  <div class="row">
    <div class="col-12 text-right">
      <%= link_to "会員ステータスを変更する", edit_admin_user_path, class: 'btn btn-warning px-5 py-3' %>
    </div>
  </div>
</div>
