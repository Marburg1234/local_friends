<%= stylesheet_link_tag 'user_show', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

 <!--変更処理成功のメッセージ-->
<% if flash[:notice].present? %>
  <%= content_tag :div, flash[:notice], class: "success_notice" %>
<% end %>

<div class="container d-flex justify-content-center flex-column my-5">
  <div class="row">
    <div class="col text-center mt-2 mb-4">
  <h1 class="text-center"><strong><%= @user.first_name %>さんのユーザープロフィール</strong></h1>
    </div>
  </div>

  <!-- 会員ステータス表示 -->
  <div class="row d-flex justify-content-center mb-4">
    <div class="col-12 col-md-6 mx-auto mt-2 border text-center">
      会員ステータス：
      <% if @user.is_active == true %>
        <p class="alert alert-success text-center"><strong>有効</strong></p>
      <% else %>
        <p class="alert alert-danger text-center">退会済み</p>
      <% end %>
    </div>
  </div>
  <div class="row mb-4">
    <div class="col-12 text-right">
      <%= link_to "会員ステータスを変更する", edit_admin_user_path, class: 'btn btn-warning px-5 py-3', data: { confirm: "ステータスを変更しますか？" } %>
    </div>
  </div>


<!--ユーザー情報は部分テンプレートにする-->
<%= render 'layouts/user_show', user: @user, trips: @trips %>

