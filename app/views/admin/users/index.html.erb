<div class="container-fluid my-3">
  <div class="row">
    <!-- 左側に配置するテーブル -->
    <div class="col-md-4">
      <h3 class="text-center border-bottom pb-2 my-2">合計会員数</h3>
      <table class="table table-bordered text-center admin_user_table mb-3">
        <tr>
          <th class="head">項目</th>
          <th class="head">人数(人)</th>
          <th class="head">割合(%)</th>
        </tr>
        <tr>
          <th>会員人数</th>
          <td class="analyse_link">
            <%= link_to admin_users_path do %>
              <%= @users_count %>
            <% end %>
          </td>
          <td>-</td>
        </tr>
        <tr>
          <th>有効</th>
          <td class="analyse_link active_users">
            <%= link_to active_users_admin_users_path do %>
              <%= @active_users_all %>
            <% end %>
          </td>
          <td class="active_users"><%= @active_user_ration %> %</td>
        </tr>
        <tr>
          <th>退会済み</th>
          <td class="analyse_link non_active_users">
            <%= link_to inactive_users_admin_users_path do %>
              <%= @not_active_users %>
            <% end %>
          </td>
          <td class="non_active_users"><%= @not_active_user_ration %> %</td>
        </tr>
      </table>
      <!--国別のユーザー数を表示する-->
      <h3 class="text-center border-bottom pb-2 my-2">国別の会員数</h3>
      <table class="table table-bordered text-center admin_user_table table-hover">
        <thead class="country_table_head">
          <tr>
            <th class="head">国のID</th>
            <th class="head">国名</th>
            <th class="head">ユーザー数(人)</th>
            <th class="head">割合(%)</th>
          </tr>
        </thead>
        <tbody class="country_table_body">
          <% @user_counts_per_country.each do |country_id, count| %>
            <tr>
              <td><%= country_id %></td>
              <td><%= Country.find(country_id).name %></td>
              <td><%= count %></td>
              <td><%= count * 100 / @users_count %> % </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <!--学習中の言語別ユーザー数を表示する-->
      <h3 class="text-center border-bottom pb-2 my-2">学習中の言語別の会員数</h3>
      <table class="table table-bordered text-center admin_user_table table-hover">
        <thead class="country_table_head">
          <tr>
            <th class="head">言語のID</th>
            <th class="head">言語名</th>
            <th class="head">ユーザー数(人)</th>
            <th class="head">割合(%)</th>
          </tr>
        </thead>
        <tbody class="country_table_body">
          <% @user_practice_language.each do |practice_language_id, count| %>
            <tr>
              <td><%= practice_language_id %></td>
              <td><%= Language.find(practice_language_id).name %></td>
              <td><%= count %></td>
              <td><%= count * 100 / @users_count %> % </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- 真ん中と右側に配置するコンテンツ -->
    <div class="col-md-8">
      <div class="row">
        <!-- ページのタイトル -->
        <div class="col-12" style="display: flex; align-items: center; justify-content: space-between;">
          <span class="pr-3 pl-3" style="font-size: 1.3rem; background-color: #ECECEC; font-weight: bold;">会員一覧</span>
        </div>

        <!-- 会員一覧の表示 -->
        <div class="col-12 mt-3">
          <table class="w-100" style="border-top: 2px solid gray; border-bottom: 2px solid gray;">
            <thead>
              <tr>
                <th class="table-active" style="padding: 10px;">会員ID</th>
                <th class="table-active" style="padding: 10px;">プロフィール写真</th>
                <th class="table-active" style="padding: 10px;">氏名</th>
                <th class="table-active" style="padding: 10px;">メールアドレス</th>
                <th class="table-active" style="padding: 10px;">ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td style="padding: 10px;"><%= user.id %></td>
                  <td style="padding: 10px;"><%= image_tag user.get_profile_image, size: '100x100', class: 'rounded-circle' %></td>
                  <td style="padding: 10px;">
                    <%= link_to admin_user_path(user) do %>
                      <%= user.family_name %><%= user.first_name %>
                    <% end %>
                  </td>
                  <td style="padding: 10px;"><%= user.email %></td>
                  <td style="padding: 10px;">
                    <% if user.is_active == true %>
                      <p class="text-center" style="color:black; background-color:#CCFF99;"><strong>有効</strong></p>
                    <% else %>
                      <p class="text-center" style="color:black; background-color:#FFABCE;">退会済み</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="d-flex justify-content-center mt-3">
            <%= paginate @users %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
