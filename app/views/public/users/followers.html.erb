<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<!--戻るボタン-->
<%= render '../views/layouts/back_btn' %>

<h1 class="text-center my-5"><strong>フォロワー一覧</strong></h1>

<div class="container">
  <div class="row justify-content-end mb-4">
    <div class="col-lg-2 col-md-8 col-sm-12 text-right">
      <%= link_to 'フォロー一覧へ', follows_user_path(@user.id), class: 'btn btn-info' %>
    </div>
  </div>

  <div class="col-lg-12 col-md-12 col-sm-12 mx-auto mb-5">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead class="table-success border">
          <tr>
            <th class="align-middle text-center">プロフィール写真</th>
            <th class="align-middle text-center">名前</th>
            <th class="align-middle text-center">国</th>
            <th class="align-middle text-center d-none d-md-table-cell">地域</th> <!-- スマホで非表示 -->
            <th class="align-middle text-center d-none d-lg-table-cell">ユーザーページ</th>
            <th class="align-middle text-center d-none d-md-table-cell">Chat開始</th> <!-- スマホで非表示 -->
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="align-middle text-center"><%= link_to user_path(user.id) do %><%= image_tag user.get_profile_image, size: '50x50', class: "rounded-circle" %><% end %></td>
              <td class="align-middle text-center"><%= link_to user_path(user.id) do %><%= user.full_name %><% end %></td>
              <td class="align-middle text-center"><%= user.country.name %></td>
              <td class="align-middle text-center d-none d-md-table-cell"><%= user.region.name %></td> <!-- スマホで非表示 -->
              <td class="align-middle text-center d-none d-lg-table-cell"><%= link_to 'ユーザーページへ', user_path(user.id), class: 'btn btn-outline-primary' %></td>
              <td class="align-middle text-center d-none d-md-table-cell"><%= render 'public/chats/chat_start_btn', user: user %></td> <!-- スマホで非表示 -->
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
