<div class="container d-flex justify-content-center flex-column">

  <!--ページの題名-->
  <div class="row">
    <div class="col text-center mt-2 mb-4">
      <h1 class="border-bottom pb-3 mt-4"><strong>いいねした記事一覧</strong></h1>
    </div>
  </div>

  <!--言い値記事の一覧表示-->
  <% @favorites.each do |favorite| %>
  <div class="row d-flex justify-content-center mb-4">
    <div class="col-lg-4 col-md-5 col-sm-12 justify-content-center text-center rounded">
      <%= link_to trip_path(favorite.trip) do %>
        <%= image_tag favorite.trip.get_trip_image, size: '200x200' %>
      <% end %>
    </div>
    <div class="col-lg-7 col-md-5 col-sm-12">
      <table>
        <tr>
          <th>タイトル</th>
          <td><%= favorite.trip.title %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= favorite.trip.post_code %></td>
        <tr>
          <th>住所</th>
          <td><%= favorite.trip.address %></td>
        </tr>
        <tr>
          <th>説明</th>
          <td><%= favorite.trip.explain %></td>
        </tr>
        <tr>
          <th>投稿ユーザー</th>
          <td><%= link_to user_path(favorite.trip.user) do %><%= favorite.trip.user.family_name %><%= favorite.trip.user.first_name %><% end %></td>
        </tr>
      </table>
    </div>
  </div>
  <% end %>

</div>