<h1 class="text-center my-5">フォロー一覧</h1>

<div class="row d-flex justify-content-end mb-4">
  <div class= 'col-6 mx-auto text-right'>
    <%= link_to followers_user_path(current_user.id), class: 'btn btn-info' do %>
      フォロワー一覧へ
    <% end %>
  </div>
</div>

<div class="container-fluid mb-5">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>プロフィール写真</th>
        <th>名前</th>
        <th>国</th>
        <th>地域</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
          <td><%= user.family_name %><%= user.first_name %></td>
          <td><%= user.country.name %></td>
          <td><%= user.region.name %></td>
          <td>フォロー数：<%= user.followings.count %></td>
          <td>フォロワー数：<%= user.followers.count %></td>
          <td><%= link_to "ユーザーページへ", user_path(user.id) %></td>
          <td><%= render 'public/chats/chat_start_btn', user: user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
