<%= stylesheet_link_tag 'user_show', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container d-flex justify-content-center flex-column">

  <div class="row">
    <div class="col text-center mt-2 mb-4">
  <h1 class="text-center">ユーザープロフィール</h1>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col mt-2 mb-5 border text-center">
      ボタンを入れるスペース
    </div>
  </div>

<!--以下がユーザー情報に関するコードたち-->
  <div class="row d-flex">
    <div class="profile_image col-lg-4 col-md-5 col-sm-12 justify-content-center text-center">
     ユーザー写真<br/>
     <%= image_tag @user.get_profile_image, size: '150x150', class: 'rounded-circle' %>
    </div>
    <div class="basic_info col-lg-7 offset-1 col-md-5 col-sm-12">
      基本情報(国など)<br>
      Name: <%= @user.family_name %>  <%= @user.family_name %><br>
      Country: <%= @user.country.name %><br>
      Location: <%= @user.region.name %>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="language col-lg-4 col-md-5 col-sm-12">
      母国語と学習中の言語を表示<br>
      母国語: <%= @user.mother_language_id %><br>
      学習中の言語: <%= @user.practice_language_id %>
    </div>
    <div class="content col-lg-7 offset-1 col-md-5 col-sm-12">
      自己紹介・話したい話題<br>
      自己紹介文: <%= @user.introduction %><br>
      話したい話題: <%= @user.topic %>
    </div>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="sub_image col-lg-4 col-md-5 col-sm-12">
     さぶ写真たち<br/>
     <%= image_tag @user.get_sub_image, size: '150x150', class: 'rounded' %>
     <%= image_tag @user.get_sub_image, size: '150x150', class: 'rounded' %>
    </div>
    <div class="posts sub_image col-lg-7 offset-1 col-md-5 col-sm-12">
      投稿した記事(最新4件)
    </div>
  </div>

</div>
