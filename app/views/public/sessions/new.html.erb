<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <!--退会処理成功とログアウトした際のフラッシュメッセージ-->
  <% if flash[:notice].present? %>
    <%= content_tag :div, flash[:notice], class: "withdraw_notice" %>
  <% end %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <div class="form-body p-4">
        <h2 class="mb-3">ログイン</h2>
        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field my-2">
            <%= f.label :メールアドレス %><span class="ml-2 text-light p-1" style="background-color: #FF6600; font-size:0.8rem;"><%= "必須" %></span><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
          </div>
          <div class="field">
            <%= f.label :パスワード %><span class="ml-2 text-light p-1" style="background-color: #FF6600; font-size:0.8rem;"><%= "必須" %></span><br />
            <%= f.password_field :password, autocomplete: "current-password", required: true %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
          <div class="actions my-3">
            <%= f.submit "ログインする" %>
          </div>
        <% end %>
        <%= render "public/shared/links" %>
      </div>
    </div>
  </div>
</div>