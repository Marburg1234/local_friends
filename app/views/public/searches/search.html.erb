<div class="container">
<table class="table">
  <!--検索対象モデルがUserの時-->
<% if @range == "User" %>
<h2>Users search for "<%= @word %>"</h2>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3">introduction</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user.id) do %>
          <%= image_tag user.get_profile_image, size: '50x50' %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(user.id) do %>
          <%= user.family_name %> <%= user.first_name %>
          <% end %>
        </td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
  <!--検索対象がbookの時-->
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <h2>Trips search for "<%= @word %>"</h2>
      <% @trips.each do |trip| %>
      <tr>
        <td>
          <%= link_to user_path(trip.user) do %>
          <%= image_tag trip.user.get_profile_image, size: '50x50' %>
          <% end %>
        </td>
        <td>
          <%= link_to trip_path(trip.id) do %>
          <%= trip.title %>
          <% end %>
          </td>
        <td><%= trip.explain %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
  </table>
</div>